{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ViewModule",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "_version": {
      "type": "number",
      "minimum": 0.0,
      "exclusiveMinimum": true
    },
    "view": {
      "type": "object",
      "properties": {
        "layout": { "type": "string", "pattern": "^[a-zA-Z0-9]+(.xml)" },
        "data": {
          "type": "array",
          "items": { "$ref": "#/definitions/data" },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "additionalProperties": false,
      "required": ["layout", "data"]
    }
  },
  "additionalProperties": false,
  "required": [ "name", "_version" ],
  "definitions": {
    "data": {
      "properties": {
        "name": { "type": "string" },
        "dataTypes": { "type": "array", "items": { "enum": ["INTEGER", "REAL", "TEXT", "BLOB"] }, "uniqueItems":true, "minItems": 1 },
        "fromTimestamp": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required": ["name", "dataTypes"]
    }
  }
}